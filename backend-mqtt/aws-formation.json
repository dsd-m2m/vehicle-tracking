        "TcuPolicy": {
            "Type": "AWS::IoT::Policy",
            "Properties": {
                "PolicyName": "tcu-policy",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "iot:Publish",
                                "iot:Receive"
                            ],
                            "Resource": [
                                "arn:aws:iot:eu-central-1:905541657615:topic/sdk/test/Python",
                                "arn:aws:iot:eu-central-1:905541657615:topic/tcu"
                            ]
                        },
                        {
                            "Effect": "Allow",
                            "Action": [
                                "iot:Subscribe"
                            ],
                            "Resource": [
                                "arn:aws:iot:eu-central-1:905541657615:topicfilter/sdk/test/Python",
                                "arn:aws:iot:eu-central-1:905541657615:topicfilter/tcu"
                            ]
                        },
                        {
                            "Effect": "Allow",
                            "Action": [
                                "iot:Connect"
                            ],
                            "Resource": [
                                "arn:aws:iot:eu-central-1:905541657615:client/basicPubSub",
                                "arn:aws:iot:eu-central-1:905541657615:client/car-*"
                            ]
                        }
                    ]
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "cd72b8b0-8a2d-411f-af1c-48dd58e813c5"
                }
            }
        },
        "DynamoPutIoT": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "PolicyName": "DynamoPutIoT",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": {
                        "Effect": "Allow",
                        "Action": "dynamodb:PutItem",
                        "Resource": "arn:aws:dynamodb:eu-central-1:905541657615:table/tcu"
                    }
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "61dd323f-33a4-4be8-afe8-03fcc0f6b1c8"
                }
            }
        },
        "TableTcu": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "car_id",
                        "AttributeType": "S"
                    },
                    {
                        "AttributeName": "timestamp",
                        "AttributeType": "N"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "car_id",
                        "KeyType": "HASH"
                    },
                    {
                        "AttributeName": "timestamp",
                        "KeyType": "RANGE"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": "2",
                    "WriteCapacityUnits": "1"
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "c29ab0da-dee9-4c83-9ab6-5de07ec5bfd5"
                }
            }
        },
        "IoTDynamo": {
            "Type": "AWS::IoT::TopicRule",
            "Properties": {
                "TopicRulePayload": {
                    "Sql": "SELECT clientid() AS car_id, timestamp() AS timestamp, * FROM 'tcu'",
                    "Actions": [{
                        "dynamoDB": {
                            "table": "tcu"
                        }
                    }],
                    "ErrorAction": {
                        "S3": {
                            "bucket": "tcu-error-log",
                            "key": "${clientid() + '-' + timestamp()}"
                        }
                    }
                }
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "318895bc-3bac-46ef-89db-197e0565d4a7"
                }
            },
            "DependsOn": [
                "TableTcu"
            ]
        }
    },
